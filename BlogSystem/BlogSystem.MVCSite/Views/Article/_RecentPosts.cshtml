@using BlogSystem.Dto

@model List<TopArticleDto>



<h4 class="fst-italic">Recent posts</h4>
<ul class="list-unstyled">
    @foreach (var article in Model)
    {
        <li>
            <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="@Url.Action("ArticleDetail", "Article", new { id = article.Id })">
                <img src="@Url.Content(article.picPath)" alt="Thumbnail" style="width: 100px; height: 100px;">
                <div class="col-lg-8">
                    <h6 class="mb-0">@article.Title</h6>
                    <small class="text-body-secondary">@article.CreateDate.ToString("MMM dd, yyyy")</small>
                </div>
            </a>
        </li>
    }
</ul>